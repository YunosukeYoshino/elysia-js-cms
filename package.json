{
  "name": "elysiajs-demo",
  "version": "1.0.0",
  "description": "A lightweight CMS API built with ElysiaJS",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "start": "bun run src/index.ts",
    "build": "bun build src/index.ts --outdir=dist",
    "seed": "bun run src/scripts/seed.ts",
    "migrate-passwords": "bun run src/scripts/migrate-passwords.ts",
    "test": "bun test",
    "test:coverage": "bun test --coverage",
    "test:watch": "bun test --watch",
    "format": "biome format --write .",
    "lint": "biome lint .",
    "check": "biome check .",
    "lint:fix": "biome check --apply .",
    "prepare-db:dev": "bun scripts/prepare-db.ts development",
    "prepare-db:test": "NODE_ENV=test bun scripts/prepare-db.ts test",
    "prepare": "husky",
    "pre-commit": "lint-staged && bun test"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "biome check --apply",
      "biome format --write"
    ]
  },
  "keywords": [
    "elysiajs",
    "cms",
    "api",
    "bun"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@elysiajs/cors": "^1.3.3",
    "@elysiajs/jwt": "^1.3.3",
    "@elysiajs/swagger": "^1.3.1",
    "@elysiajs/html": "^1.3.1",
    "@prisma/client": "^6.16.1",
    "elysia": "^1.3.21",
    "mime-types": "^3.0.1",
    "sharp": "^0.34.3",
    "uuid": "^13.0.0",
    "formidable": "^3.5.4"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "@types/formidable": "^3.4.5",
    "@types/mime-types": "^3.0.1",
    "@types/node": "^24.3.1",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@types/web": "^0.0.266",
    "bun-types": "^1.2.21",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "prisma": "^6.16.1",
    "supertest": "^7.1.4",
    "typescript": "^5.9.2"
  }
}
